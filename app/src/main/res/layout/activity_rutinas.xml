<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rutinas.RutinasActivity">

    <TextView
        android:id="@+id/txt_fechaE"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="48dp"
        android:text="Fecha EjecuciÃ³n:"
        app:layout_constraintEnd_toStartOf="@+id/editFechaE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_repeticiones"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="Repeticiones:"
        app:layout_constraintEnd_toStartOf="@+id/editRepeticiones"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_fechaE"
        app:layout_constraintTop_toBottomOf="@+id/txt_fechaE" />

    <TextView
        android:id="@+id/txt_series"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:text="Series:"
        app:layout_constraintEnd_toStartOf="@+id/editSeries"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_repeticiones"
        app:layout_constraintTop_toBottomOf="@+id/txt_repeticiones" />

    <Button
        android:id="@+id/btn_guardarR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="82dp"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editFechaE"
        android:layout_width="185dp"
        android:layout_height="34dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editRepeticiones"
        android:layout_width="184dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editFechaE"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="@+id/editFechaE"
        app:layout_constraintTop_toBottomOf="@+id/editFechaE" />

    <EditText
        android:id="@+id/editSeries"
        android:layout_width="185dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editRepeticiones"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editRepeticiones"
        app:layout_constraintTop_toBottomOf="@+id/editRepeticiones" />

</android.support.constraint.ConstraintLayout>